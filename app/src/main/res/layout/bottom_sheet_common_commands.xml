<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mTvExport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:paddingVertical="6dp"
            android:text="@string/text_export_commands"
            android:textColor="@color/textSecondary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mTvImport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:background="?android:attr/selectableItemBackground"
            android:paddingVertical="6dp"
            android:text="@string/text_import_commands"
            android:textColor="@color/textSecondary"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/border" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRvCommonCommands"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/mTvCommonEmpty"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:paddingHorizontal="16dp"
        android:textAlignment="center"
        android:text="@string/text_common_empty_guide"
        android:textColor="@color/textHint"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>
